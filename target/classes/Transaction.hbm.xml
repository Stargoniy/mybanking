<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.in6k.mybanking.entity">
    <class name="Transaction" table="transactions">
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="sum" type="double" column="sum" />
        <many-to-one name="debetAccount" class="Account" column="debet_account_id" not-null="true" unique="true" lazy="false"/>
        <many-to-one name="creditAccount" class="Account" column="credit_account_id" not-null="true" unique="true" lazy="false"/>
    </class>
</hibernate-mapping>
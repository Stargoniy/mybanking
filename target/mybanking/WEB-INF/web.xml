<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>com.in6k.mybanking.servlet.UsersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>accounts</servlet-name>
        <servlet-class>com.in6k.mybanking.servlet.AccountsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>transactions</servlet-name>
        <servlet-class>com.in6k.mybanking.servlet.TransactionsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>accounts</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>transactions</servlet-name>
        <url-pattern>/transactions</url-pattern>
    </servlet-mapping>

</web-app>
